<% if @tweets.present? %>
  <ul>
    <% @tweets.each do |tweet| %>
      <li>
        <%= tweet.tweet %>
        <%= link_to 'Show', tweet %> |
        <%= link_to 'Edit', edit_tweet_path(tweet) %> |
        <%= link_to 'Delete', tweet, method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tweets found.</p>
<% end %>
